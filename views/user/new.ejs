
<div class="row">
	<div class="col-sm-8 col-md-6 col-md-offset-3">
	<header>
	<div class="container-fluid">
		<h2 class="page-header">Nuevo Usuario</h2>

		<form data-toggle="validator" role="form" method="post" action="/user/create">

			<div class="form-group has-feedback">
				<label class="control-label">Nombre</label>
				<input required type="text" class="form-control" name="nombre" size="30" />
				<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
			</div>

			<div class="form-group has-feedback">
				<label class="control-label">Password</label>
				<input type="password" class="form-control" name="password" size="30" />
				<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
			</div>

			<input type="submit" class="form-control btn btn-primary" value="Nuevo Usuario" />

		</form>

	</div>
	</header>
	</div>
</div>
