<% include partial_promenu %><p>

  <script>
  $('#project_menu a:contains("Resumen")').parent().addClass("active");
  $('#project_menu h8').html('Resumen');
  </script>

  <div class="row">

    <div class="col-xs-12 col-sm-6">
      <h3 class="page-header">
        LogBook
      </h3>
      <table class="table table-striped table-condensed">
        <% var i,time_log; if (logs) { for (i=0; i < logs.length; i++){ %>
          <% if (logs[i].log_tipo == 0) { %>
      		<% time_this = moment(logs[i].createdAt).format("YYYY/MM/DD"); if (time_log !== time_this) { time_log = time_this; %>
            <thead>
        			<tr>
        				<th> <h4><%= moment(logs[i].createdAt).format("DD/MM/YYYY") %> </h4></th>
                <th></th>
        			</tr>
            </thead>
      		<% }%>
      		<tr>
      			<td> <%= logs[i].log_entrada %> </td>
      			<td> <%= logs[i].User.nombre %> </td>
      		</tr>
        <% } else { %>
          <% time_this = moment(logs[i].createdAt).format("YYYY/MM/DD"); if (time_log !== time_this) { time_log = time_this; %>
            <thead>
              <tr>
                <th> <h4><%= moment(logs[i].createdAt).format("DD/MM/YYYY") %> </h4></th>
                <th></th>
              </tr>
            </thead>
          <% }%>
          <tr>
            <td> <%= logs[i].log_entrada %> <a href="<%= logs[i].log_url %>"><i class="glyphicon glyphicon-link"></i></a></td>
            <td> <%= logs[i].User.nombre %> </td>
          </tr>
        <% } %>
        <% }} %>
    	</table>
    </div>

    <div class="col-xs-12 col-sm-6">

      <h3 class="page-header">
        Tareas Generales
      </h3>
      <table class="table table-striped table-condensed">
        <thead>
          <tr>
            <th>
            </th>
            <th>
              <span class="pull-left">Piezas</span>
            </th>
          </tr>
        </thead>
      <% var i; if (tasks_all.length) { for (i=0; i < tasks_all.length; i++){ %>
      	<tr>
      	  <td><%= tasks_all[i].tas_tarea %></td>
          <td><a href="/project/<%= project.pro_url %>/pieces/<%= tasks_all[i].Piece.pie_url %>"><%= tasks_all[i].Piece.pie_nombre %></a></td>
        </tr>
      <% }} else { %>
        <tr>
          <td>No hay tareas.</td>
        </tr>
      <% } %>
      </table>

      <h3 class="page-header">
        Mis Tareas
      </h3>

      <table class="table table-striped table-condensed">
        <thead>
          <tr>
            <th>
            </th>
            <th>
              <span class="pull-left">Piezas</span>
            </th>
          </tr>
        </thead>
      <% var i; if (tasks.length) { for (i=0; i < tasks.length; i++){ %>
      	<tr>
      	  <td><%= tasks[i].tas_tarea %></td>
          <td><a href="/project/<%= project.pro_url %>/pieces/<%= tasks[i].Piece.pie_url %>"><%= tasks[i].Piece.pie_nombre %></a></td>
        </tr>
      <% }} else { %>
        <tr>
          <td>No hay tareas.</td>
        </tr>
      <% } %>
      </table>

    </div>
  </div>
