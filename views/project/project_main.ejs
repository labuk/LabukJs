<% include partial_promenu %><p>

  <script>
  $('#project_menu a:contains("Resumen")').parent().addClass("active");
  $('#project_menu h8').html('Resumen');
  </script>

<h3 class="page-header">
  Tareas Generales
</h3>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>
      </th>
      <th>
        <span class="pull-left">Piezas</span>
      </th>
    </tr>
  </thead>
<% var i; if (tasks_all.length) { for (i=0; i < tasks_all.length; i++){ %>
	<tr>
	  <td><%= tasks_all[i].tas_tarea %></td>
    <td><a href="/project/<%= project.pro_url %>/pieces/<%= tasks_all[i].Piece.pie_url %>"><%= tasks_all[i].Piece.pie_nombre %></a></td>
  </tr>
<% }} else { %>
  <tr>
    <td>No hay tareas.</td>
  </tr>
<% } %>
</table>

<h3 class="page-header">
  Mis Tareas
</h3>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>
      </th>
      <th>
        <span class="pull-left">Piezas</span>
      </th>
    </tr>
  </thead>
<% var i; if (tasks.length) { for (i=0; i < tasks.length; i++){ %>
	<tr>
	  <td><%= tasks[i].tas_tarea %></td>
    <td><a href="/project/<%= project.pro_url %>/pieces/<%= tasks[i].Piece.pie_url %>"><%= tasks[i].Piece.pie_nombre %></a></td>
  </tr>
<% }} else { %>
  <tr>
    <td>No hay tareas.</td>
  </tr>
<% } %>
</table>
