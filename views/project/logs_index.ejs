<% include partial_promenu %><p>

<h2> LogBook </h2>

<!-- Formulario AÃ±adir Task -->
<button id="displayText-1" class="submit" style="display: block" type="button" onclick="$('#toggleText-1').toggle(); $('#displayText-1').toggle();">Nueva Entrada </button>
<div id="toggleText-1" style="display: none">
<a id="closeText-1" class="submit" href="#" style="	float: right;" type="button" onclick="$('#toggleText-1').toggle(); $('#displayText-1').toggle();">Cerrar</a>
<form method="post" action="/project/<%= project.pro_url %>/logs/create">
  <label for="tar" class="rem">Log:</label><p>
  <textarea rows="4" cols="50" name="log[log_entrada]" placeholder="Entrada"></textarea><p>
  <input type="submit" value="Salvar" />
</form>
</div>
<% var i,time_log; if (logs) { for (i=0; i < logs.length; i++){ %>
	<table>
		<% time_this = moment(logs[i].createdAt).format("YYYY/MM/DD"); if (time_log !== time_this) { time_log = time_this; %>
			<tr>
				<td> <h3><%= moment(logs[i].createdAt).format("DD/MM/YYYY") %> </h3></td>
			</tr>
		<% }%>
		<tr>
			<td> <%= logs[i].log_entrada %> </td>
		</tr>
		<tr>
			<td> <%= logs[i].User.nombre %> </td>
		</tr>
	</table>
<% }} %>
