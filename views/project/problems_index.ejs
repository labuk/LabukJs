<% include partial_promenu %><p>

	<script>
	$('#project_menu a:contains("Problemas")').parent().addClass("active");
	$('#project_menu h8').html('Problemas');
	</script>

<h2 class="page-header">
	Problemas
</h2>

<table class="table table-striped table-condensed">
<% var i; if (problems.length) { for (i=0; i < problems.length; i++){ %>
		<thead>
			<tr>
				<th>Problema</th>
				<th>Pieza</th>
				<th>Estado</th>
			</tr>
		</thead>
		<tbody>
		<tr>
			<td> <a href="/project/<%= project.pro_url %>/problems/<%= problems[i].id %>"><%= problems[i].prb_problema %></a></td>
			<td> <a href="/project/<%= project.pro_url %>/pieces/<%= problems[i].Piece.pie_url %>"> <%= problems[i].Piece.pie_nombre %></a> </td>
			<td> <script>document.write( get_problema(<%= problems[i].prb_estado %>) );</script> </td>
		</tr>
	</tbody>
<% }} %>
</table>
