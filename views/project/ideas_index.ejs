<% include partial_promenu %><p>

	<script>
	$('#project_menu a:contains("Ideas")').parent().addClass("active");
	$('#project_menu h8').html('Ideas');
	</script>

	<div class="page-header">
  	<h2>
			Cajón de Ideas
			<button type="button" class="btn btn-info pull-right" data-toggle="modal" data-target="#myModal">Nueva Idea</button>
  	</h2>
  	<div class="clearfix"></div>
  </div>

	<!-- Formulario Añadir Idea -->
	<div id="myModal" class="modal fade" role="dialog">
	  <div class="modal-dialog">
	    <!-- Modal content-->
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal">&times;</button>
	        <h4 class="modal-title">Nueva Idea</h4>
	      </div>
	      <div class="modal-body">
					<form data-toggle="validator" role="form" method="post" action="/project/<%= project.pro_url %>/ideas/create">
						<div class="form-group has-feedback">
							<textarea required class="form-control" rows="3" name="idea[ide_idea]" placeholder="Idea"></textarea>
							<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
						</div>
						<input type="submit" class="form-control btn btn-success" value="Salvar" />
					</form>
	      </div>
	    </div>
	  </div>
	</div>

	<table class="table table-striped table-condensed">
		<% var i; if (ideas) { for (i=0; i < ideas.length; i++){ %>
		<tr>
			<td> <%= ideas[i].ide_idea %> </td>
		</tr>
	<% }} %>
	</table>

	<ul class="pager">
		<% if (pag.current > 0) { %>
	  	<li class="previous"><a href="/project/<%= project.pro_url %>/ideas?pag=<%= pag.current-1 %>">&larr; Anterior</a></li>
		<% } else { %>
			<li class="previous disabled"><a href="#">&larr; Anterior</a></li>
		<% } %>
		<% if (pag.current+1 < pag.total) { %>
	  <li class="next"><a href="/project/<%= project.pro_url %>/ideas?pag=<%= pag.current+1 %>">Siguiente &rarr;</a></li>
		<% } else { %>
			<li class="next disabled"><a href="#">Siguiente &rarr;</a></li>
		<% } %>
	</ul>
