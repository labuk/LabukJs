<h2 class="page-header">
  Añadir proyecto
</h2>

<!-- Formulario Añadir Proyecto -->
<form role="post" method="post" action="/project/create">
  <div class="form-group">
    <label class="sr-only">Nombre Proyecto</label>
    <input type="text" class="form-control" name="project[pro_nombre]" placeholder="<%= project.pro_nombre%>" />
  </div>
  <div class="form-group">
    <label class="sr-only">Eslogan</label>
    <input type="text" class="form-control" name="project[pro_eslogan]" placeholder="<%= project.pro_eslogan%>" />
  </div>
  <div class="form-group">
    <label class="sr-only">Descripción</label>
    <textarea class="form-control" name="project[pro_descripcion]" placeholder="<%= project.pro_descripcion%>" /></textarea>
  </div>
  <div class="form-group">
    <label class="control-label">Tipo de Proyecto:</label>
    <input type="radio" name="project[pro_tipo]" value="0" > Tecnológico
    <input type="radio" name="project[pro_tipo]" value="1" > Innovación
    <input type="radio" name="project[pro_tipo]" value="2" > Artístico
    <input type="radio" name="project[pro_tipo]" value="3" > Social
    <input type="radio" name="project[pro_tipo]" value="4" > Productivo
  </div>
  <div class="form-group">
    <a href="/project"><button class="btn btn-danger" type="button">Cancelar</button></a>
    <input type="submit" class="btn btn-success" value="Salvar" />
  </div>
</form>
