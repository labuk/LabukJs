<% include partial_promenu %><p>

	<script>
	$('#project_menu a:contains("Piezas")').parent().addClass("active");
	</script>

<h2 class="page-header">
	Piezas
	<button type="button" class="btn btn-info pull-right" data-toggle="modal" data-target="#myModal">Nueva Pieza</button>
</h2>

<!-- Formulario Nueva Pieza -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Nueva Pieza</h4>
      </div>
      <div class="modal-body">
				<form role="form" method="post" action="/project/<%= project.pro_url %>/pieces/create">
					<div class="form-group">
						<label class="sr-only">Nombre Pieza</label>
						<input type="text" class="form-control" name="piece[pie_nombre]" placeholder="<%= piece.pie_nombre%>" value="" />
					</div>
					<div class="form-group">
						<label class="control-label">Prioridad:</label>
						<div class="radio-inline"><input type="radio" name="piece[pie_prioridad]" value="0" > General </div>
						<div class="radio-inline"><input type="radio" name="piece[pie_prioridad]" value="1" > Esencial </div>
						<div class="radio-inline"><input type="radio" name="piece[pie_prioridad]" value="2" > Ãštil </div>
						<div class="radio-inline"><input type="radio" name="piece[pie_prioridad]" value="3" > Laborioso </div>
						<div class="radio-inline"><input type="radio" name="piece[pie_prioridad]" value="4" > Desechado </div>
					</div>
					<input type="submit" class="form-control btn btn-success" value="Salvar" />
				</form>
      </div>
    </div>
  </div>
</div>

<h2> Lista de Piezas </h2>
	<table class="table table-striped table-condensed">
		<thead>
			<tr>
				<th></th>
				<th>Prioridad</th>
				<th>Responsable</th>
			</tr>
		</thead>
		<tbody>
		<% var i; if (pieces) { for (i=0; i < pieces.length; i++){ %>
		<tr>
		  <td><a href="/project/<%= project.pro_url %>/pieces/<%= pieces[i].pie_url %>"> <%= pieces[i].pie_nombre %></a></td>
			<td> <script>document.write( get_prioridad(<%= pieces[i].pie_prioridad %>) );</script> </td>
			<td> <%= pieces[i].User.nombre %> </td>
		</tr>
		<% }} %>
	</tbody>
	</table>
