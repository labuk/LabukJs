<h2 class="page-header"> Contactos </h2>

<% var i; if (contacts) { for (i=0; i < contacts.length; i++){ %>

  <%  if (contacts[i].con_block == 0) { %>
    <div class="col-sm-4 col-xs-6 col-md-3 portfolio-item">
      <div class="panel <% if (contacts[i].User.online) { %> panel-success <% } else { %> panel-default <% } %> ">
    	  <div class="panel-body">
    			<% if (contacts[i].avatar) { %>
    				<img src="/images/avatar/<%= contacts[i].avatar %>" class="img-responsive" />
    			<% } else { %>
    				<img src="/images/avatar/avatar.jpg" class="img-responsive" />
    			<% } %>
    	  </div>
    	  <div class="panel-heading"><a href="/user/profile/<%= contacts[i].UserId %>"><%= contacts[i].User.nombre %></a>
          Solicitud enviada
    		</div>
      </div>
  	</div>
  <% } %>
  <%  if (contacts[i].con_block == 1) { %>
    <div class="col-sm-4 col-xs-6 col-md-3 portfolio-item">
      <div class="panel <% if (contacts[i].User.online) { %> panel-success <% } else { %> panel-default <% } %> ">
    	  <div class="panel-body">
    			<% if (contacts[i].avatar) { %>
    				<img src="/images/avatar/<%= contacts[i].avatar %>" class="img-responsive" />
    			<% } else { %>
    				<img src="/images/avatar/avatar.jpg" class="img-responsive" />
    			<% } %>
    	  </div>
    	  <div class="panel-heading"><a href="/user/profile/<%= contacts[i].UserId %>"><%= contacts[i].User.nombre %></a>
          Solicitud recibida
    		</div>
      </div>
  	</div>
  <% } %>

<% }} %>

<% var i; if (contacts) { for (i=0; i < contacts.length; i++){ %>
<tr>
  <%  if (contacts[i].con_block == 2) { %>
    <div class="col-sm-4 col-xs-6 col-md-3 portfolio-item">
      <div class="panel <% if (contacts[i].User.online) { %> panel-success <% } else { %> panel-default <% } %> ">
    	  <div class="panel-body">
          <% console.log(contacts[i].User.online)  %>
    			<% if (contacts[i].avatar) { %>
    				<img src="/images/avatar/<%= contacts[i].avatar %>" class="img-responsive" />
    			<% } else { %>
    				<img src="/images/avatar/avatar.jpg" class="img-responsive" />
    			<% } %>
    	  </div>
    	  <div class="panel-heading"><a href="/user/profile/<%= contacts[i].UserId %>"><%= contacts[i].User.nombre %></a>
