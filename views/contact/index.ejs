    				data-toggle="dropdown">
    				<span class="caret"></span>
    			</button>
    			<ul class="dropdown-menu pull-right" role="menu">
    				<li><a href="/contact/message" >Mensajes</a></li>
            <li><a href="/contact/chat/<%= contacts[i].UserId %>" >Chat</a></li>
    				<li class="divider"></li>
    				<li><a href="#" ><span class="text-warning">Bloquear</span></a></li>
            <li><a href="#" ><span class="text-danger">Eliminar</span></a></li>
